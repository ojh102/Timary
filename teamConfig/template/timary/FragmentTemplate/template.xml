<?xml version="1.0"?>
<template
    format="4"
    revision="1"
    name="Fragment"
    description="Creates a Fragment"
    minApi="23"
    minBuildApi="23">

    <category value="Timary" />

    <parameter
        id="className"
        name="Fragment Name"
        type="string"
        constraints="nonempty|unique"
        default="BlankFragment"
        help="The name of the fragment class to create" />

    <parameter
        id="fragmentName"
        name="Fragment Layout Name"
        type="string"
        constraints="layout|nonempty|unique"
        default="fragment_blank"
        suggest="fragment_${classToResource(className)}"
        help="The name of the layout to create" />

    <parameter
        id="Name"
        name="Name"
        type="string"
        constraints="class|nonempty|unique"
        default="Blank"
        visibility="false"
        suggest="${underscoreToCamelCase(classToResource(className))}"
        help="The name of the view model to create" />

    <parameter
        id="packName"
        name="Package Name"
        type="string"
        constraints="nonempty|unique"
        default="blank"
        visibility="false"
        suggest="${classToResource(className)}"
        help="The name of the package to create" />

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>
